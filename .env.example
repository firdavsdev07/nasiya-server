# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=3000

# =================================
# DATABASE CONFIGURATION
# =================================
MONGO_DB=mongodb://localhost:27017/nasiya_db

# =================================
# JWT CONFIGURATION
# =================================
JWT_ACCESS_KEY=your_jwt_access_key_here
JWT_REFRESH_KEY=your_jwt_refresh_key_here

# =================================
# TELEGRAM BOT CONFIGURATION
# =================================
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username_here
ENABLE_BOT=true

# =================================
# CORS CONFIGURATION
# =================================
# Development URLs
DASHBOARD_HOST_URL=http://localhost:5173
BOT_HOST_URL=http://localhost:3000
BOT_WEB_APP_URL=http://localhost:5174

# Production URLs (uncomment when deploying)
# DASHBOARD_HOST_URL=https://your-dashboard-domain.com
# BOT_HOST_URL=https://your-backend-domain.com
# BOT_WEB_APP_URL=https://your-bot-webapp-domain.com

# =================================
# SUPER ADMIN CONFIGURATION
# =================================
ADMIN_FIRSTNAME=Super
ADMIN_LASTNAME=Admin
ADMIN_PHONENUMBER=+998901234567
ADMIN_PASSWORD=admin123

# =================================
# OPTIONAL CONFIGURATIONS
# =================================
SESSION_SECRET=nasiya_session_secret_2024
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# LOGGING CONFIGURATION
# =================================
# Set to 'true' to enable console logs in production
# In development, logs are always enabled
ENABLE_LOGS=true
